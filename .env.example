# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/scanserve?schema=public"

# Application
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=30m
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_REFRESH_EXPIRATION=30d
JWT_RESET_SECRET=your-jwt-reset-secret-key

# Session Management
SESSION_EXPIRATION=30d
SESSION_RENEWAL_THRESHOLD=7d
SESSION_INACTIVITY_TIMEOUT=4h
SESSION_CLEANUP_INTERVAL=1h

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@scanserve.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Razorpay
RAZORPAY_KEY_ID=testingkeyid
RAZORPAY_KEY_SECRET=testingkeyid
RAZORPAY_WEBHOOK_SECRET=testingkeyid
